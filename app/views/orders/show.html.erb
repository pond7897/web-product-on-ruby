
<div class="w-[480px] mx-auto">
    <div class="mb-4">
      <h1 class="text-3xl text-red-500"> Order Summary </h1>
      <div class="pb-4 mb-4 border-b rounded-lg">
        <div class="grid grid-cols-[210px_180px_1fr]">
          <p class="mt-5"> <%= @order.product.name %> </p>
          <p class="mt-5"> x<%= @order.quantity %> </p>
          <p class="mt-5"> <%= @order.total_price %> </p>
        </div>
        <p class="mt-2 text-gray-500 text-xs"> <%= @order.product.description %> </p>
      </div>
    </div>

    <div>
      <div class="grid grid-cols-[390px_1fr] mt-2">
        <p> Subtotal: </p>
        <p> <%= @order.total_price %> </p>
      </div>
    </div>
    <button class="mt-5 bg-green-400 border-2 border-green-700 rounded-md h-8 w-16"> ชำระเงิน </button>
</div>